{
  "name": "perfume",
  "displayName": "Perfume",
  "description": "VS Code theme focused on frosted glassmorphism with vibrant colors.",
  "version": "0.3.1",
  "author": "Type-Delta",
  "publisher": "type-delta",
  "license": "MIT",
  "icon": "./assets/icon_128.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Type-Delta/vs-perfume"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Themes"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Perfume Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/Perfume Dark-color-theme.json"
      },
      {
        "label": "Perfume Dark Fractured",
        "uiTheme": "vs-dark",
        "path": "./themes/Perfume Dark Fractured-color-theme.json"
      }
    ]
  },
  "type": "module",
  "scripts": {
    "compile-sass": "npx sass ./src/sass/index.scss:./dist/vs-overwrite.css --no-source-map && npx sass ./src/sass/adapters/catppuccin-icon.scss:./dist/catppuccin-icon.adt.css --no-source-map",
    "build": "npm run build:themes && npm run compile-sass && npx vsce package --pre-release --no-dependencies -o ./dist/perfume-beta3.vsix",
    "install": "npm run build && code --install-extension ./dist/perfume-beta3.vsix",
    "format": "node ./scripts/codeFormatter.js",
    "build:themes": "node ./scripts/buildThemes.mjs && npm run format"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.6.2",
    "sass": "^1.91.0"
  }
}
